---
import type { SkillsCategoryProps } from "../types";
import Section from "./Section.astro";

interface Props {
  skills: SkillsCategoryProps[];
}

const { skills } = Astro.props;
---

<Section text="Skills" href="skills">
  <div class="space-y-12">
    {
      skills.map((category) => (
        <div>
          <h3 class="mb-6 font-serif text-lg font-semibold text-white">
            {category.category}
          </h3>
          <div class="grid grid-cols-3 gap-6 sm:grid-cols-4 md:grid-cols-6">
            {category.skills.map((skill) => (
              <div class="group flex flex-col items-center gap-2 transition-transform duration-200 hover:-translate-y-1">
                <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-slate-900 p-3 transition-all duration-200 group-hover:bg-blue-600/20">
                  <img
                    src={skill.logo}
                    alt={skill.name}
                    class="h-full w-full object-contain opacity-80 transition-opacity duration-200 group-hover:opacity-100"
                  />
                </div>
                <span class="text-center text-xs text-slate-400 transition-colors duration-200 group-hover:text-blue-400">
                  {skill.name}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</Section>
